<% flash.each do |type, msg| %>
    <div>
        <%= msg %>
    </div>
<% end %>

<h1>Books</h1>

<table>
    
    <% @books.each do |book| %>
        <tr>
            <td><%=book.title%></td>
            <td><%=book.author%></td>
            <td><%=book.genre%></td>
            <td><%=book.price%></td>
            <td><%=book.published_date%></td>
            <td><%= link_to("Update", edit_book_path(book.id)) %></td>
            <td><%= link_to("View", book_path(book.id)) %></td>
            <td><%= link_to("Delete", delete_book_path(book.id)) %></td>
        </tr>
    <% end %>
</table>

<p><%= link_to("Add New Book", new_book_path) %></p>